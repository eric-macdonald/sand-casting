git config --global core.editor vim

git config --global user.email "eric.w.macdonald@gmail.com"
git config --global user.name "Eric MacDonald"
# to verify
git config --global user.name

echo "# sand-casting" >> README.md
git init
git add README.md
git add --all
git commit -m "first commit"
git remote add origin https://github.com/eric-macdonald/sand-casting.git
git push -u origin master

git config credential.helper store
Username: <type your username>
password

git remote show origin

pull before push to synchronize
